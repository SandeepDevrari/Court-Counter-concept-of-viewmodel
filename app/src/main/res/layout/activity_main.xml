<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewmodel"
            type="devrari.sandeep.court_counter.viewmodel.ViewModelMainActivity" />
    </data>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".MainActivity">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/ll_1"
                android:orientation="horizontal"
                android:layout_margin="@dimen/defaultMargin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/b_reset">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/defaultMargin"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_team_a"
                        android:textSize="@dimen/defaultTextSize"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_score"
                        tools:text="3"
                        android:text='@{""+viewmodel.scoreATeam}'
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/largeTextSize"
                        android:layout_gravity="center"/>
                    <Button
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/b_3_point"
                        android:background="@color/colorPrimary"
                        android:text="@string/text_3_points"
                        android:layout_margin="@dimen/defaultMargin"
                        android:padding="@dimen/defaultPadding"
                        android:layout_gravity="center"
                        android:onClick="@{viewmodel::onButtonClick}"/>
                    <Button
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/b_2_point"
                        android:background="@color/colorPrimary"
                        android:text="@string/text_2_points"
                        android:layout_margin="@dimen/defaultMargin"
                        android:padding="@dimen/defaultPadding"
                        android:layout_gravity="center"
                        android:onClick="@{viewmodel::onButtonClick}"/>
                    <Button
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/b_free_throw"
                        android:background="@color/colorPrimary"
                        android:text="@string/text_free_throw"
                        android:layout_margin="@dimen/defaultMargin"
                        android:padding="@dimen/defaultPadding"
                        android:layout_gravity="center"
                        android:onClick="@{viewmodel::onButtonClick}"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGray"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/defaultMargin"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_team_b"
                        android:textSize="@dimen/defaultTextSize"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_score_b"
                        tools:text="3"
                        android:text='@{""+viewmodel.scoreBTeam}'
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/largeTextSize"
                        android:layout_gravity="center"/>
                    <Button
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/b_3_point_b"
                        android:background="@color/colorPrimary"
                        android:text="@string/text_3_points"
                        android:layout_margin="@dimen/defaultMargin"
                        android:padding="@dimen/defaultPadding"
                        android:layout_gravity="center"
                        android:onClick="@{viewmodel::onButtonClick}"/>
                    <Button
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/b_2_point_b"
                        android:background="@color/colorPrimary"
                        android:text="@string/text_2_points"
                        android:layout_margin="@dimen/defaultMargin"
                        android:padding="@dimen/defaultPadding"
                        android:layout_gravity="center"
                        android:onClick="@{viewmodel::onButtonClick}"/>
                    <Button
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/b_free_throw_b"
                        android:background="@color/colorPrimary"
                        android:text="@string/text_free_throw"
                        android:layout_margin="@dimen/defaultMargin"
                        android:padding="@dimen/defaultPadding"
                        android:layout_gravity="center"
                        android:onClick="@{viewmodel::onButtonClick}"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/b_reset"
                android:background="@color/colorPrimary"
                android:text="@string/text_reset"
                android:layout_margin="@dimen/defaultMargin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_1"
                android:onClick="@{viewmodel::onButtonClick}"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>